{
  "name": "ascii-titles",
  "displayName": "ASCII Titles",
  "description": "Generate ascii art titles",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ascii-titles.helloWorld"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ascii-titles.randomtitle",
        "title": "Random Title"
      },
      {
        "command": "ascii-titles.title",
        "title": "Title"
      },
      {
        "command": "ascii-titles.setfont",
        "title": "Set Font"
      },
      {
        "command": "ascii-titles.setkerning",
        "title": "Set Kerning"
      },
      {
        "command": "ascii-titles.setwidth",
        "title": "Set Width"
      },
      {
        "command": "ascii-titles.setbreak",
        "title": "Set Whitespace Break"
      }
    
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "figlet": "^1.5.2"
  }
}
